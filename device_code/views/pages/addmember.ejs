<!-- views/pages/addmember.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>
<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th,
  td {
    text-align: center;
    padding: 8px;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2
  }

  th {
    text-align: center;
    background-color: #4CAF50;
    color: white;
  }
</style>
<% include ../partials/digitalclock %>

  <body class="container" onload="startTime()">
    <header>
      <% include ../partials/header %>
    </header>
    <main>
      <div class="row">
        <div class="col-sm-12">
          <div class="jumbotron">
            <form method="post" action="/add">
              <table cellpadding="11">
                <tr>
                  <td>Name</td>
                  <td>: <input type="text" name="name" required></td>
                </tr>
                <tr>
                  <td>BirthDate</td>
                  <td>: <input type="text" name="birthdate"></td>
                </tr>
                <tr>
                  <td valign="top">Address</td>
                  <td valign="top">: <textarea name="address" cols="30" rows="5"></textarea></td>
                </tr>
                <tr>
                  <td>UID</td>
                  <td>: <input type="text" name="uuid" value="<%=data%>"></td>
                </tr>
                <tr>
                  <td>LineID</td>
                  <td>: <input type="text" name="lineid"></td>
                </tr>
                <tr>
                  <td>Identification CardNumber</td>
                  <td>: <input type="text" name="identificationid" required></td>
                </tr>
                <tr>
                  <td></td>
                  <td>
                    &nbsp; <input type="submit" name="submit" value="Save" onclick="popup('Add Complete!')">
                  </td>
                </tr>
              </table>
            </form>
            <p>Please Check Your Profile Before Add into system</p>
          </div>
        </div>
      </div>
    </main>
    <script>
      function popup(data) {
        alert(data);
      }
    </script>
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>

</html>
