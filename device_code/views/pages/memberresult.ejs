<!-- views/pages/addmember.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>
<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th,
  td {
    text-align: center;
    padding: 8px;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2
  }

  th {
    text-align: center;
    background-color: #4CAF50;
    color: white;
  }
</style>
<% include ../partials/digitalclock %>

  <body class="container" onload="startTime()">
    <header>
      <% include ../partials/header %>
    </header>
    <main>
      <div class="row">
        <div class="col-sm-12">
          <div class="jumbotron">
            <div>
              <h5>
                            <p  type="text" id="">Fullname : <%=data.name%> </p>
                            <p  type="text" id="">Id CardNumber : <%=data.identificationid%></p>
                            <p  type="text" id="">BirthDate <%=data.birthdate%></p>
                            <p  type="text" id="">Address : <%=data.address%></p>
                            <p  type="text" id=""></p>
                            </h5>
            </div>
            <div>
              <table id="list">
                <tr>
                  <th>Date</th>
                  <th>Department</th>
                  <th>Symtoms</th>
                  <th>Solution</th>
                  <th>Status</th>
                </tr>
                <tr>
                  <td>12 June 2017</td>
                  <td><input value="<%=data.department%>"></input>
                  </td>
                  <td><input value="<%=data.symtoms%>"></input>
                  </td>
                  <td><%=data.solutions%></td>
                  <td>
                    <Select>
                                    <option>Checking</option>
                                    <option>Wait</option>
                                    <option>Clear</option>
                                    </select>
                  </td>
                </tr>
                <table>
                  <div><button type="button" onclick="popup('Print Complete!')">Print Report</button></div>
            </div>

            <script>
              function popup(data) {
                alert(data);
              }
            </script>
          </div>
        </div>
      </div>
    </main>
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>

</html>
